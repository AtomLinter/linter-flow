{
  "name": "linter-flow",
  "version": "5.6.1",
  "description": "Lint JavaScript on the fly, using Flow",
  "repository": "https://github.com/AtomLinter/linter-flow.git",
  "homepage": "https://github.com/AtomLinter/linter-flow",
  "author": "Naman Goel",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "./lib/index.js",
  "scripts": {
    "lint": "eslint . && flow check",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.53.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "atom": true
    },
    "rules": {
      "no-console": "off",
      "global-require": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    }
  }
}
