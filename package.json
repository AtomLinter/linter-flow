{
  "name": "linter-flow",
  "version": "5.2.0",
  "description": "Lint JavaScript on the fly, using Flow",
  "repository": "https://github.com/AtomLinter/linter-flow.git",
  "homepage": "https://github.com/AtomLinter/linter-flow",
  "author": "Naman Goel",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "main": "./lib/index.js",
  "scripts": {
    "lint": "eslint . && flow check",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^4.4.0",
    "atom-package-deps": "^4.0.1"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^2.10.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "flow-bin": "^0.25.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "atom": true
    },
    "rules": {
      "no-console": 0,
      "global-require": 0,
      "import/no-unresolved": [2, {"ignore": ["atom"]}]
    }
  }
}
